<h1>Listing gifts</h1>

<table>
  <thead>
    <tr>
      <th>Giver</th>
      <th>Receiver</th>
      <th>Merchant</th>
      <th>Amount</th>
      <th>Amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @gifts.each do |gift| %>
      <tr>
        <td><%= gift.giver_id %></td>
        <td><%= gift.receiver_id %></td>
        <td><%= gift.merchant_id %></td>
        <td><%= gift.amount %></td>
        <td><%= gift.amount %></td>
        <td><%= link_to 'Show', gift %></td>
        <td><%= link_to 'Edit', edit_gift_path(gift) %></td>
        <td><%= link_to 'Destroy', gift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

