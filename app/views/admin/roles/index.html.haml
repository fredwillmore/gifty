%h1 Listing roles
%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th
  %tbody
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= link_to 'Show', admin_role_path(role)
        %td= link_to 'Edit', edit_admin_role_path(role)
        %td= link_to 'Destroy', admin_role_path(role), method: :delete, data: { confirm: 'Are you sure?' }
%br
= link_to 'New Role', new_admin_role_path
